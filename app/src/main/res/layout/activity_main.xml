<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dfffbf">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.android.greeny.MainActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="#27eb00"
            android:text="Fast food ''Greeny''"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-thin"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="225dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:src="@drawable/header_img" />

            <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/location_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:src="@drawable/ic_receipt"
                android:layout_alignTop="@+id/name"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="14dp" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="5dp"
                android:text="Name:"
                android:textColor="#0d450c"
                android:textStyle="bold"
                android:textAppearance="?android:textAppearanceMedium"
                android:textSize="18sp"
                android:layout_toRightOf="@id/location_icon"/>

            <TextView
                android:id="@+id/greeny"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Fast food ''Greeny''"
                android:textColor="#00a800"
                android:textStyle="bold"
                android:fontFamily="sans-serif-thin"
                android:textSize="18sp"
                android:layout_above="@+id/address"
                android:layout_alignLeft="@+id/desc"
                android:layout_alignStart="@+id/desc" />

            <ImageView
                android:id="@+id/address_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_location"
                android:layout_alignTop="@+id/address"
                android:layout_alignLeft="@+id/location_icon"
                android:layout_alignStart="@+id/location_icon" />

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="5dp"
                android:text="Address:"
                android:textColor="#0d450c"
                android:textStyle="bold"
                android:textAppearance="?android:textAppearanceMedium"
                android:textSize="18sp"
                android:layout_below="@id/name"
                android:layout_toRightOf="@id/address_icon"/>

            <TextView
                android:id="@+id/address_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rue Salubre 76, Cheau"
                android:textColor="#00a800"
                android:textStyle="bold"
                android:fontFamily="sans-serif-thin"
                android:textSize="18sp"
                android:layout_above="@+id/description"
                android:layout_alignLeft="@+id/desc"
                android:layout_alignStart="@+id/desc" />

            <ImageView
                android:id="@+id/description_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_local_dining"
                android:layout_alignTop="@+id/description"
                android:layout_alignLeft="@+id/address_icon"
                android:layout_alignStart="@+id/address_icon" />

            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="5dp"
                android:text="Description:"
                android:textColor="#0d450c"
                android:textStyle="bold"
                android:textAppearance="?android:textAppearanceMedium"
                android:textSize="18sp"
                android:layout_below="@id/address"
                android:layout_toRightOf="@id/description_icon"/>

            <TextView
                android:id="@+id/desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Organic fast food"
                android:textColor="#00a800"
                android:textStyle="bold"
                android:fontFamily="sans-serif-thin"
                android:textSize="18sp"
                android:layout_above="@+id/hours"
                android:layout_alignLeft="@+id/hours"
                android:layout_alignStart="@+id/hours" />

            <ImageView
                android:id="@+id/hours_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_alarm"
                android:layout_alignTop="@+id/working"
                android:layout_alignLeft="@+id/description_icon"
                android:layout_alignStart="@+id/description_icon" />

            <TextView
                android:id="@+id/working"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="5dp"
                android:text="Open hours:"
                android:textColor="#0d450c"
                android:textStyle="bold"
                android:textAppearance="?android:textAppearanceMedium"
                android:textSize="18sp"
                android:layout_below="@id/description"
                android:layout_toRightOf="@id/hours_icon"/>

            <TextView
                android:id="@+id/hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:text="Every day 10:00 - 23:00"
                android:textColor="#00a800"
                android:textStyle="bold"
                android:fontFamily="sans-serif-thin"
                android:textSize="18sp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/description"
                android:layout_toRightOf="@id/working"/>

            <ImageView
                android:id="@+id/contact_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_mail_outline"
                android:layout_alignTop="@+id/contact"
                android:layout_alignLeft="@+id/hours_icon"
                android:layout_alignStart="@+id/hours_icon" />

            <TextView
                android:id="@+id/contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="5dp"
                android:text="Contact:"
                android:textColor="#0d450c"
                android:textStyle="bold"
                android:textAppearance="?android:textAppearanceMedium"
                android:textSize="18sp"
                android:layout_below="@id/working"
                android:layout_toRightOf="@id/contact_icon"/>

            <TextView
                android:id="@+id/info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="info@greeny.com"
                android:textColor="#00a800"
                android:textStyle="bold"
                android:fontFamily="sans-serif-thin"
                android:textSize="18sp"
                android:layout_alignBaseline="@+id/contact"
                android:layout_alignBottom="@+id/contact"
                android:layout_alignLeft="@+id/hours"
                android:layout_alignStart="@+id/hours" />
            </RelativeLayout>

    </LinearLayout>
</ScrollView>
